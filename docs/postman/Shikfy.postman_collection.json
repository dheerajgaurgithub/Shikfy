{
  "info": {
    "name": "Shikfy API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Postman collection for Shikfy server endpoints"
  },
  "item": [
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password\"\n}"
        }
      },
      "response": []
    },
    {
      "name": "Users - Get Profile",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/users/:id", "host": ["{{baseUrl}}"], "path": ["users", ":id"] }
      },
      "response": []
    },
    {
      "name": "Users - Posts",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/users/:id/posts", "host": ["{{baseUrl}}"], "path": ["users", ":id", "posts"] }
      },
      "response": []
    },
    {
      "name": "Users - Reels",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/users/:id/reels", "host": ["{{baseUrl}}"], "path": ["users", ":id", "reels"] }
      },
      "response": []
    },
    {
      "name": "Follow - Status",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/users/:id/following-status", "host": ["{{baseUrl}}"], "path": ["users", ":id", "following-status"] }
      },
      "response": []
    },
    {
      "name": "Follow - Follow User",
      "request": {
        "method": "POST",
        "url": { "raw": "{{baseUrl}}/users/:id/follow", "host": ["{{baseUrl}}"], "path": ["users", ":id", "follow"] }
      },
      "response": []
    },
    {
      "name": "Follow - Unfollow User",
      "request": {
        "method": "DELETE",
        "url": { "raw": "{{baseUrl}}/users/:id/follow", "host": ["{{baseUrl}}"], "path": ["users", ":id", "follow"] }
      },
      "response": []
    },
    {
      "name": "Bookmarks - List",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/bookmarks", "host": ["{{baseUrl}}"], "path": ["bookmarks"] }
      },
      "response": []
    },
    {
      "name": "Stories - By User",
      "request": {
        "method": "GET",
        "url": { "raw": "{{baseUrl}}/stories/user/:id", "host": ["{{baseUrl}}"], "path": ["stories", "user", ":id"] }
      },
      "response": []
    },
    {
      "name": "Close Friends - Update",
      "request": {
        "method": "PATCH",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": { "raw": "{{baseUrl}}/users/:id/close-friends", "host": ["{{baseUrl}}"], "path": ["users", ":id", "close-friends"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userIds\": [\"<friendId1>\", \"<friendId2>\"]\n}"
        }
      },
      "response": []
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Dashboard - Summary",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/admin/dashboard/summary", "host": ["{{baseUrl}}"], "path": ["admin","dashboard","summary"] } }
        },
        {
          "name": "Users - List",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/admin/users?page=1&limit=25", "host": ["{{baseUrl}}"], "path": ["admin","users"], "query":[{"key":"page","value":"1"},{"key":"limit","value":"25"}] } }
        },
        {
          "name": "Users - Block",
          "request": { "method": "PATCH", "header":[{"key":"Content-Type","value":"application/json"}], "url": { "raw": "{{baseUrl}}/admin/users/:id/block", "host": ["{{baseUrl}}"], "path": ["admin","users",":id","block"] }, "body": { "mode":"raw", "raw": "{\n  \"until\": \"2025-12-31\",\n  \"reason\": \"policy_violation\"\n}" } }
        },
        {
          "name": "Users - Unblock",
          "request": { "method": "PATCH", "url": { "raw": "{{baseUrl}}/admin/users/:id/unblock", "host": ["{{baseUrl}}"], "path": ["admin","users",":id","unblock"] } }
        },
        {
          "name": "Posts - List",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/admin/posts?page=1&limit=25", "host": ["{{baseUrl}}"], "path": ["admin","posts"], "query":[{"key":"page","value":"1"},{"key":"limit","value":"25"}] } }
        },
        {
          "name": "Posts - Delete",
          "request": { "method": "DELETE", "url": { "raw": "{{baseUrl}}/admin/posts/:id", "host": ["{{baseUrl}}"], "path": ["admin","posts",":id"] } }
        },
        {
          "name": "Reels - List",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/admin/reels?page=1&limit=25", "host": ["{{baseUrl}}"], "path": ["admin","reels"], "query":[{"key":"page","value":"1"},{"key":"limit","value":"25"}] } }
        },
        {
          "name": "Reels - Delete",
          "request": { "method": "DELETE", "url": { "raw": "{{baseUrl}}/admin/reels/:id", "host": ["{{baseUrl}}"], "path": ["admin","reels",":id"] } }
        },
        {
          "name": "Reports - List",
          "request": { "method": "GET", "url": { "raw": "{{baseUrl}}/admin/reports?status=open", "host": ["{{baseUrl}}"], "path": ["admin","reports"], "query":[{"key":"status","value":"open"}] } }
        },
        {
          "name": "Reports - Resolve",
          "request": { "method": "PATCH", "header":[{"key":"Content-Type","value":"application/json"}], "url": { "raw": "{{baseUrl}}/admin/reports/:id/resolve", "host": ["{{baseUrl}}"], "path": ["admin","reports",":id","resolve"] }, "body": { "mode":"raw", "raw": "{\n  \"resolution\": \"resolved\"\n}" } }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:3000" }
  ]
}
